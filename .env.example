# Seton Package Environment Configuration

# Environment setting - determines which configurations to use
# Options: development, testing, production
ENVIRONMENT=development

# Google Sheets Configuration
# Different sheet IDs for different environments to prevent accidental data corruption
GOOGLE_SHEET_ID_DEV=your_development_sheet_id_here
GOOGLE_SHEET_ID_TEST=your_testing_sheet_id_here  
GOOGLE_SHEET_ID_PROD=your_production_sheet_id_here

# Google Credentials Configuration
# Path to your service account JSON file OR JSON string of credentials
GOOGLE_CREDENTIALS_PATH=path/to/service-account.json
# Alternative: GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Database Configuration (if using custom connections)
# Usually handled by seton_utils, but available for override
# DATABASE_HOST=your_db_host
# DATABASE_PORT=1521
# DATABASE_SERVICE=your_service_name
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password

# GitHub Configuration (for CI/CD and seton_utils installation)
GITHUB_PAT=your_github_personal_access_token_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# Application-specific Configuration
# Add your package-specific environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2

# Airflow Configuration (when running in Airflow)
# These will be overridden by Airflow Variables when running in Airflow
# AIRFLOW_VAR_GOOGLE_SHEET_ID_PROD=production_sheet_id
# AIRFLOW_VAR_GOOGLE_SHEET_ID_DEV=development_sheet_id

# Development Tools Configuration
PYTEST_DISABLE_PLUGIN_AUTOLOAD=1
PYTHONPATH=src
